#!/usr/bin/env sh

set -e
set -f
set -u

depends()
{
	:
}

depends x86_64-linux-musl-cc
extract_compile()
{
	x86_64-linux-musl-cc $CFLAGS "$@"
}

extract_compileBaseDriverCFile()
{
	local source="$1"
	shift 1
	extract_compile -I"$underlayIncludeFolderPath" -Werror "$@" -c -o "$source".o "$source".c
}

depends x86_64-linux-musl-ar
extract_archive()
{
	x86_64-linux-musl-ar "$@"
}

depends rm
extract_archiveBaseDriver()
{
	extract_archive rcs base.a "$@"
	rm -rf "$@"
}

depends mv sed rm
extract_macosSedInplaceWorkaround()
{
	local filePath="$1"
	local sedPattern="$2"
	
	mv "$filePath" "$filePath".orig
	sed -E -e "$sedPattern" "$filePath".orig >"$filePath"
	rm "$filePath".orig
}

extract_compileBaseDriverCFilesToArArchive()
{
	local driver="$1"
	local sources="$2"
	local additionalCFLAGS="$3"
	
	cd "$extract_buildFolderPath"/"$driver"/base 1>/dev/null 2>/dev/null
		set --
		local source
		for source in $sources
		do
			extract_compileBaseDriverCFile "$source" $additionalCFLAGS
			set -- "$@" "$source".o
		done
		extract_archiveBaseDriver "$@"
	cd - 1>/dev/null 2>/dev/null
}

# base driver originates from the package cid-shared-code.2016.11.22 from FreeBSD.
depends rm
extract_compile_e1000()
{
	extract_compileBaseDriverCFilesToArArchive "$driver" 'e1000_80003es2lan e1000_82540 e1000_82541 e1000_82542 e1000_82543 e1000_82571 e1000_82575 e1000_i210 e1000_api e1000_ich8lan ../e1000_logs e1000_mac e1000_manage e1000_mbx e1000_nvm e1000_osdep e1000_phy e1000_vf' '-Wno-uninitialized -Wno-unused-parameter -Wno-unused-variable -Wno-misleading-indentation'
	
	# igb
	# igb_ethdev igb_rxtx igb_pf igb_flow

	# em
	# em_ethdev em_rxtx
}

# base driver originates from the package of cid-fm10k.2017.01.24.tar.gz from FreeBSD.
depends rm
extract_compile_fm10k()
{
	extract_compileBaseDriverCFilesToArArchive "$driver" 'fm10k_pf fm10k_tlv fm10k_common fm10k_mbx fm10k_vf fm10k_api' '-Wno-deprecated -Wno-unused-parameter -Wno-unused-value -Wno-strict-aliasing -Wno-format-extra-args -Wno-unused-variable -Wno-unused-but-set-variable'
	
	# fm10k_ethdev fm10k_rxtx fm10k_pf fm10k_rxtx_vec
}

# base driver originates from the package cid-i40e.2018.09.13.tar.gz from FreeBSD.
depends mv sed rm
extract_compile_i40e()
{
	# Add missing errno.h header using sed (note use of `\` before the embedded newline for macos sed)!
	extract_macosSedInplaceWorkaround "$extract_buildFolderPath"/"$driver"/base/i40e_osdep.h 's;#include <string.h>;#include <string.h>\
#include <errno.h>;g'
	
	extract_compileBaseDriverCFilesToArArchive "$driver" 'i40e_adminq i40e_common i40e_diag i40e_hmc i40e_lan_hmc i40e_nvm i40e_dcb' '-DPF_DRIVER -DVF_DRIVER -DINTEGRATED_VF -DX722_A0_SUPPORT -Wno-sign-compare -Wno-unused-value -Wno-unused-parameter -Wno-strict-aliasing -Wno-format -Wno-pointer-to-int-cast -Wno-format-nonliteral -Wno-format-security -Wno-unused-variable -Wno-unused-but-set-variable'

	# PMD Specific
	# -DRTE_LIBRTE_IEEE1588
	
	# i40e Specific
	# -DRTE_LIBRTE_I40E_RX_ALLOW_BULK_ALLOC
	
	# i40e_ethdev i40e_rxtx i40e_rxtx_vec_sse i40e_ethdev_vf i40e_pf i40e_fdir i40e_flow rte_pmd_i40e i40e_tm i40e_vf_representor i40e_rxtx_vec_avx2
}

# base driver originates from the ice package version 2019.10.16 from FreeBSD.
depends mv sed rm
extract_compile_ice()
{	
	extract_compileBaseDriverCFilesToArArchive "$driver" 'ice_controlq ice_common ice_sched ice_switch ice_nvm ice_flex_pipe ice_flow ice_dcb ice_fdir' '-Wno-unused-parameter -Wno-unused-variable -Wno-unused-but-set-variable'

	# ice_ethdev ice_rxtx ice_rxtx_vec_sse ice_switch_filter ice_fdir_filter ice_hash ice_rxtx_vec_avx2 ice_generic_flow	
}

depends rm mkdir
extract_createBuildFolder()
{
	rm -rf "$extract_buildFolderPath"
	mkdir -m 0700 -p "$extract_buildFolderPath"
}

extract_setCFLAGS()
{
	CFLAGS='-O3 -m64 -mmmx -msse -msse2 -msse3 -mssse3 -msse4 -msse4a -msse4.1 -msse4.2 -mavx -mpclmul -maes -mfsgsbase -mrdrnd -mf16c -mpopcnt -DRTE_ARCH_X86'
	
	local modernAvxSupport=''
	case "$modernAvxSupport" in
		
		AVX2)
			CFLAGS="$CFLAGS -mavx2 -DCC_AVX2_SUPPORT -DDRTE_MACHINE_CPUFLAG_AVX2 -mavx512f -DRTE_MACHINE_CPUFLAG_AVX512F"
		;;
		
		AVX512F)
			CFLAGS="$CFLAGS -mavx2 -DCC_AVX2_SUPPORT -DDRTE_MACHINE_CPUFLAG_AVX2 -mavx512f -DRTE_MACHINE_CPUFLAG_AVX512F"
		;;
		
	esac
}

depends rsync
extract_copyDriverToBuildAndCompile()
{
	local driver="$1"
	
	rsync --archive --quiet --exclude meson.build --exclude README --exclude Makefile --exclude '*.map' "$(pwd)"/library/dpdk-"$extract_dpdkVersion"/drivers/net/"$driver" "$extract_buildFolderPath"/
	extract_compile_${driver}
}

extract_main()
{
	local extract_dpdkVersion=20.02

	local extract_buildFolderPath="$(pwd)"/build
	extract_createBuildFolder
	
	local CFLAGS
	extract_setCFLAGS
	
	local underlayIncludeFolderPath="$(pwd)"/underlay
	
	local driver
	# ixgbe vmxnet3 iavf
	for driver in e1000 fm10k i40e ice
	do
		extract_copyDriverToBuildAndCompile "$driver"
	done
}

extract_main "$@"
